<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
	<!-- Base Worktable -->

<ThingDef ParentName="BuildingBase">
		<defName>RationTank</defName>
		<label>ration tank</label>
		<description>A tank that process base ration into pellets</description>
		<thingClass>Kubouch.Building_UniversalFermenter</thingClass>
		<graphicData>
			<texPath>Things/Building/RationTank</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<damageData>
				<rect>(0.05,0.1,0.9,0.9)</rect>
			</damageData>
			<drawSize>(3,2)</drawSize>
		</graphicData>
		<size>(3,2)</size>
		<minifiedDef>MinifiedFurniture</minifiedDef>
		<CastEdgeShadows>true</CastEdgeShadows>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.45</fillPercent>
		<pathCost>60</pathCost>
		<statBases>
			<WorkToBuild>2500</WorkToBuild>
			<Mass>10</Mass>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>80</costStuffCount>
		<costList>
			<Component>1</Component>
		</costList>
		<rotatable>true</rotatable>
		<DesignationCategory>Production</DesignationCategory>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="Kubouch.CompProperties_UniversalFermenter">
				<products>
					<li>
						<thingDef>Pellets</thingDef>
						<ingredientFilter>
							<thingDefs><li>BaseRation</li></thingDefs>
						</ingredientFilter>
						<temperatureSafe>
							<min>-10</min>
							<max>50</max>
						</temperatureSafe>
						<temperatureIdeal>
							<min>-5</min>
							<max>45</max>
						</temperatureIdeal>
						<progressPerDegreePerTick>5</progressPerDegreePerTick>
						<baseFermentationDuration>20000</baseFermentationDuration>
						<maxCapacity>100</maxCapacity>
						<speedLessThanSafe>0.5</speedLessThanSafe>
						<speedMoreThanSafe>1</speedMoreThanSafe>
						<efficiency>1</efficiency>
					</li>
				</products>
			</li>
		</comps>
		<researchPrerequisites>
			<li>SK_SoilFertillizationI</li>
		</researchPrerequisites>
	</ThingDef>
	
</ThingDefs>